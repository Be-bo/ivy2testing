<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_members_image"
        android:layout_width="@dimen/preview_circular_profile_image_width_height"
        android:layout_height="@dimen/preview_circular_profile_image_width_height"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_members_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_profile_selected"/>

    <TextView
        android:id="@+id/item_members_name"
        style="@style/StandardText"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center|start"
        app:layout_constraintStart_toEndOf="@id/item_members_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_members_options"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Nicholas Hill"/>

    <ImageButton
        android:id="@+id/item_members_options"
        android:layout_width="@dimen/image_button_width_height"
        android:layout_height="@dimen/image_button_width_height"
        android:src="@drawable/ic_options"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@id/item_members_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/transparent"/>

</androidx.constraintlayout.widget.ConstraintLayout>