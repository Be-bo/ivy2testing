<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userProfile_roundCardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/test_flower"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/off_black"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/userProfile_guidelineH"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/userProfile_guidelineV"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/userProfile_guidelineV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.40" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/userProfile_guidelineH"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/userProfile_guidelineV"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/userProfile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/StandardText"
            android:text="Paul Dan"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/userProfile_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/StandardText"
            android:text="Mechanical Engineering" />

        <TextView
            android:id="@+id/userProfile_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/StandardClickableText"
            android:text="Edit" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/userProfile_guidelineH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/disabled"
        app:layout_constraintTop_toTopOf="@id/userProfile_guidelineH"/>

    <TextView
        android:id="@+id/userProfile_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/StandardText"
        android:text="Posts"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userProfile_posts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userProfile_header"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/userProfile_seeAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/StandardClickableText"
        android:text="See All"
        app:layout_constraintTop_toBottomOf="@id/userProfile_posts"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>