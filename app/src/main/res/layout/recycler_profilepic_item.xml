    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerCircleItem_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recyclerCircleItem_image"
        android:layout_width="@dimen/preview_circular_profile_image_width_height"
        android:layout_height="@dimen/preview_circular_profile_image_width_height"
        android:src="@drawable/ic_account_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>