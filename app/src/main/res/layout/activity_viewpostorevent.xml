<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
        android:id="@+id/viewPost_toolBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:theme="@style/ViewPostToolBarStyle"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/viewPost_floatingEditButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/ic_baseline_edit"
            android:backgroundTint="@color/interaction"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="editPost"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <ImageView
                    android:id="@+id/viewPost_visual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/test_flower"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/post_visual" />

                <LinearLayout
                    android:id="@+id/viewPost_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="8dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/viewPost_userImage"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_profile_selected"
                            android:contentDescription="@string/profile_pic"
                            android:onClick="viewAuthorProfile"/>

                        <TextView
                            android:id="@+id/viewPost_userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/StandardText"
                            android:text="@string/userName"
                            android:layout_marginStart="8dp"
                            android:layout_gravity="center"
                            android:onClick="viewAuthorProfile"/>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/viewPost_contents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/general_view_margin">
                </FrameLayout>

                <TextView
                    android:id="@+id/viewPost_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/StandardClickableText"
                    android:text="@string/comments"
                    android:layout_marginTop="24dp"
                    android:layout_gravity="center"/>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginTop="2dp"/>

        </LinearLayout>

        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>