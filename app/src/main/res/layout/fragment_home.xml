<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- for handling fragments we should use a frame layout, they stack views on top of eachother
I am changing this to a scroll view with a linear layout to chain layouts veritcally-->
    <include layout="@layout/bubble_bar_placeholder" />


    <ScrollView
        android:id="@+id/main_fragment_scrollview"
        android:name="com.ivy2testing.mainFragmentName"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_fragment_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </ScrollView>


</LinearLayout>