<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerGridItem_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/grid_item_banner"
        android:layout_width="40dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_banner"
        android:elevation="4dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="-3dp"
        android:layout_gravity="end"
        android:contentDescription="@string/event" />

    <TextView
        android:id="@+id/grid_item_banner_text"
        style="@style/StandardText"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Event"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="1dp"
        android:elevation="5dp"
        android:rotation="90"
        android:layout_gravity="end" />

    <androidx.cardview.widget.CardView
        android:id="@+id/recyclerGridItem_cardView"
        android:layout_width="@dimen/preview_square_post_image_width_height"
        android:layout_height="@dimen/preview_square_post_image_width_height"
        app:cardCornerRadius="10dp"
        android:elevation="2dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/recyclerGridItem_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/test_flower"
            android:contentDescription="@string/post"/>

    </androidx.cardview.widget.CardView>

</FrameLayout>