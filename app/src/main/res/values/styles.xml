<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <!-- Theme being used for the hamburger testing class. Changes transparency on nav bar -->
    <style name="HamburgerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="StandardButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">50dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:enabled">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
    </style>


    <style name="StandardEditText" parent="android:Widget.EditText">
        <item name="android:layout_height">50dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:backgroundTint">@color/hint</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <!-- Styling for bubbles in the uni + tags scrollview -->
    <style name="Bubble" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@drawable/bubble_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bubble_shape</item>
        <item name="android:enabled">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:onClick">toggleEnabled"</item>
    </style>

    <style name="SegmentedButton" parent="android:Widget.Material.Button.Borderless">
        <item name="android:layout_height">50dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_margin">3dp</item>

        <item name="android:textColor">@color/interaction</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/segmented_button</item>
        <item name="android:selectable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- This theme changes the color of the back button in the post activity/layout -->
    <style name="PostToolBarStyle"  parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/interaction</item>
    </style>

</resources>
