<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="StandardButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">50dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:enabled">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="StandardEditText" parent="android:Widget.EditText">
        <item name="android:layout_height">50dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:backgroundTint">@color/hint</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="StandardClickableText" parent="android:Widget.TextView">
        <item name="android:textSize">16dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/interaction</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

</resources>
