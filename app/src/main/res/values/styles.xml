<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="StandardButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">50dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:enabled">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="StandardEditText" parent="android:Widget.EditText">
        <item name="android:layout_height">50dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/off_black</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:backgroundTint">@color/hint</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="StandardClickableText" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/interaction</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="StandardSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:thumbTint">@color/switch_color</item>
        <item name="android:trackTint">@color/switch_color</item>   <!--30% transparent by default-->
    </style>

    <style name="SwitchCompatTheme" >
        <item name="colorAccent">@color/interaction</item>
    </style>


</resources>
